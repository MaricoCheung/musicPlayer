page {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #e0e0e0;
}
/* 顶部导航栏 */
.tab-bar {
    display: flex;
    height: 75rpx;
    background-color: #999;
}
.tab-item {
    flex: 1;
    text-align: center;
    line-height: 75rpx;
    color: antiquewhite;
    border-bottom: 4rpx solid antiquewhite;
}
.tab-item.active {
    color: #ff00b3;
    border-bottom: 2rpx solid #ff00b3;
}
/* 内容呈现区 */
.main {
    flex: 1;
    background-color: rgb(211, 111, 111);
}
.main>swiper {
    height: 100%;
}
.content-mylist {
    display: flex;
    flex-wrap: wrap;
    margin: 50rpx 80rpx;
}
.list-item {
    flex: 1;
}
.list-item image {
    display: block;
    width: 220rpx;
    height: 220rpx;
    margin: 40rpx 20rpx 10rpx;
    border-radius: 10rpx;
}
.list-item text {
    text-align: center;
    margin: 0 20rpx;
}
/* 歌曲播放条 */
.player-bar {
    display: flex;
    height: 150rpx;
    background-color: #111;
    border-top: 2rpx solid wheat;
}